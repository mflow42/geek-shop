<div class="row">
  <div class="col">
    <h5 data-category="{{ category.name }}">Category: {{ category.name }}</h5>
  </div>
</div>
<hr>
<div class="row">
  <div class="col">
    <div class="form-row">
      <div class="form-group col-md-2">
        <div data-price="{{ product.price }}">Price: ${{ product.price }}</div>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-1">
        <input type="text" class="form-control form-control-sm" placeholder="Quantity"
               data-quantity="{{ product.quantity }}" value="{{ product.quantity }}">
      </div>
      <div class="form-group col-md-2">
        <button id="btnAddToCart" type="submit" class="btn btn-sm btn-primary">Add to cart</button>
      </div>
    </div>

    <div class="alert alert-success alert-dismissible fade show add" role="alert">
      Product has been added to cart!
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

  </div>
</div>
