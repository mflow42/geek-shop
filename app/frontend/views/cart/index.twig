<div class="container">
  <div class="row">
    <div class="col">
      <h1>Cart</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
        <tr>
          <th scope="col-1">#</th>
          <th scope="col-1">Name</th>
          <th scope="col-1">Description</th>
          <th scope="col-1">Price</th>
          <th scope="col-1">Qty</th>
          <th scope="col-1">Total</th>
          <th scope="col-1">Action</th>
        </tr>
        </thead>

        <tbody>
        
        {% for product in cart %}
        
          <tr>
            <th data-id="{{ product.id }}" scope="row">{{ product.id }}</th>
            <td>{{ product.name }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.price }}</td>
            <td>{{ product.quantity }}</td>
            <td>{{ product.price * product.quantity }}</td>
            <td>
              <div class="form-row">
                <div class="form-group col">
                  <button class="btn btn-sm btn-danger btnDeleteFromCart" type="submit" class="btn btn-sm btn-danger">delete</button>
                </div>
              </div>
            </td>
          </tr>
          
        {% endfor %}
        
        </tbody>
        
      </table>
      <div class="alert alert-warning alert-dismissible fade show delete" role="alert">
                Product has been deleted!
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
      <button type="button" class="btn btn-dark btn-block">Оформить заказ</button>
    </div>
  </div>

</div>
